<div class="container">
    <h1>Contacto</h1>
  
    <%= form_with(model: @contact, url: contacts_path) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
  
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control" %>
      </div>
  
      <%= form.submit "Enviar", class: "btn btn-primary btn-enviar" %>

    <% end %>
  </div>